{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src", "tests", "tests"],
  "exclude": [
    "./node_modules/",
  ],
}
